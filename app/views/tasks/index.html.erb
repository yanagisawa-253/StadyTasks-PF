<div class="container">
  <div class="row">
    <!--sidebar作成（ユーザープロフィール）-->
    <div class="col-sm-8 border rounded mx-auto mt-5">
      <% @tasks.each do |task| %>
      <div class="container">
        <div class="col-sm-5 mt-3">
          <strong><%= task.title %></strong>（<%= task.user.name %>）
        </div>
        <div class="col-sm-10 mt-3">
          ・<%= task.body %>
        </div>
        <!--セレクトボックスで完了、未完了-->
      </div>
      <div class="d-flex flex-row-reverse">
        <%= link_to "詳細", task_path(task), class: "btn btn-outline-primary btn-sm mb-2 ml-3" %>
        <% if current_user %>
          <%= link_to "編集", edit_task_path(task), class: "btn btn-outline-primary btn-sm mb-2 ml-3" %>
        <% end %>
        <p class="mb-2 ml-2"></p>コメント <%= task.comments.count %></p>
        <p class="mb-2 ml-2 mr-3"> ♡ <%= task.likes.count %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>