<div class="container">
  <div class="row">
    <span class="fa-stack fa-4x mt-5">
      <i class="fas fa-circle fa-stack-2x text-dark"></i>
      <i class="fas fa-clipboard-list fa-stack-1x fa-inverse"></i>
    </span>
    <!--sidebar作成（ユーザープロフィール）-->
    <div class="col-sm-8 mt-5 ml-5">
      <% @tasks.each do |task| %>
      <div class="container border rounded">
        <div class="col-sm-5 mt-3">
          <i class="fas fa-clipboard-list"></i>
          <strong><%= task.title %></strong>（<%= task.user.name %>）
        </div>
        <div class="col-sm-8 mt-3">
          <i class="fas fa-digital-tachograph"></i> <%= task.body %>
        </div>
        <div class="col-sm-3 mt-3 text-success">
          <%= task.status %>
          <i class="fas fa-wrench"></i>
        </div>
        <div class="d-flex flex-row-reverse">
          <%= link_to "", task_path(task), class: "fas fa-clipboard-check btn btn-sm text-primary mb-2 ml-3" %>
          <% if current_user %>
            <%= link_to "", edit_task_path(task), class: "fas fa-wrench btn btn-sm text-primary mb-2 ml-3" %>
          <% end %>
          <p class="mb-2 ml-2"></p>コメント <%= task.comments.count %></p>
          <p class="mb-2 ml-2 mr-3"> ♡ <%= task.likes.count %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>