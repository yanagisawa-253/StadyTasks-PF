<div class="container">
  <div class="row mt-5">
    <div class="col-sm-12">
      <%= form_with model: @task, local:true do |f| %>
      <div class="form-group pb-3">
        <div class="row pb-3">
          <%= f.label "タスクを設定してください:" %>
        </div>
        <%= f.text_field :title, placeholder: "20文字以内で入力してください", :size => "40" %>
      </div>
      <div class="form-group">
        <div class="row pb-3">
          <%= f.label "詳細を入力してください:" %>
        </div>
        <%= f.text_field :body, placeholder: "50文字以内で入力してください", :size => "100" %>
      </div>
      <div class="form-group">
        <%= f.submit "投稿する", class: "btn btn-success mt-5" %>
      </div>
      <% end %>
    </div>
  </div>
</div>