<div class="task-edit container mb-5">
  <div class="row">
    <div class="task-heading col-sm-12 mt-5"><h4><i class="fas fa-wrench"></i>タスクを編集する</h4></div>
    <div class="task-edit-body col-sm-8 border border-secondary rounded mx-auto mt-3 mb-5 ml-2 mr-2">
      <% if @task.errors.any? %>
        <div id="error_explanation mt-3 mx-auto">
          <h4><%= @task.errors.count %>件の空欄があります。</h4>
          <ul>
            <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@task, local:true do |f| %>
      <div class="task-edit-title form-group pt-3 pl-3 pb-3">
        <div class="row pb-2">
          <%= f.label "タスクを設定してください:" %>
        </div>
        <%= f.text_field :title, placeholder: "20文字以内で入力してください", :size => "30" %>
        <!--bootstrap公式よりヘルプテキストの表示-->
        <small id="passwordHelpBlock" class="form-text text-muted pt-1">タスク設定は２０文字以内で入力しましょう</small>
      </div>
      <div class="task-edit-body form-group pl-3">
        <div class="row pb-2">
          <%= f.label "詳細を入力してください:" %>
        </div>
        <%= f.text_field :body, placeholder: "50文字以内で入力してください", :size => "43" %>
        <small id="passwordHelpBlock" class="form-text text-muted pt-1">詳細については５０文字以内で入力しましょう</small>
      </div>
      <div class="task-edit-status field">
        <%= f.label "ステータスを更新する" %>
    　　<%= f.select :status, ["新規","着手中","完了"] %>
  　　</div>
      <div class="form-group text-center">
        <%= f.submit "タスクを投稿する", class: "btn btn-primary mt-3 mb-4" %>
      </div>
      <% end %>
    </div>
  </div>
</div>