<div class="container mb-5">
  <div class="row">
    <span class="fa-stack fa-4x mt-5 mb-5">
      <i class="fas fa-circle fa-stack-2x text-dark"></i>
      <i class="fas fa-edit fa-stack-1x fa-inverse"></i>
    </span>
    <div class="col-sm-8 border border-secondary rounded mx-auto mt-5 mb-5">
      <% if @task.errors.any? %>
        <div id="error_explanation mt-3 mx-auto">
          <h4><%= @task.errors.count %>件の空欄があります。</h4>
          <ul>
            <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@task, local:true do |f| %>
      <div class="form-group pt-3 pl-3 pb-3">
        <div class="row pb-2">
          <%= f.label "タスクを設定してください:" %>
        </div>
        <%= f.text_field :title, placeholder: "20文字以内で入力してください", :size => "30" %>
        <!--bootstrap公式よりヘルプテキストの表示-->
        <small id="passwordHelpBlock" class="form-text text-muted pt-1">タスク設定は２０文字以内で入力してください</small>
      </div>
      <div class="form-group pl-3">
        <div class="row pb-2">
          <%= f.label "詳細を入力してください:" %>
        </div>
        <%= f.text_field :body, placeholder: "50文字以内で入力してください", :size => "45" %>
        <small id="passwordHelpBlock" class="form-text text-muted pt-1">詳細については５０文字以内で入力してください</small>
      </div>
      <div class="field">
        <%= f.label "ステータスを更新する" %>
    　　<%= f.select :status, ["新規","着手中","完了"] %>
  　　</div>
      <div class="form-group text-center">
        <%= f.submit "投稿する", class: "btn btn-primary mt-3 mb-4" %>
      </div>
      <% end %>
    </div>
  </div>
</div>