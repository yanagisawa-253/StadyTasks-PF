<% if @task.errors.any? %>
    <%= @task.errors.count %>件のエラーが発生しました
    <% @task.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-10 border rounded mx-auto mt-5">
      <%= form_with model:@task, local:true do |f| %>
      <div class="form-group pt-3 pl-3 pb-3">
        <div class="row pb-2">
          <%= f.label "タスクを設定してください:" %>
        </div>
        <%= f.text_field :title, placeholder: "20文字以内で入力してください", :size => "100" %>
        <!--bootstrap公式よりヘルプテキストの表示-->
        <small id="passwordHelpBlock" class="form-text text-muted pt-1">タスク設定は２０文字以内で入力してください</small>
      </div>
      <div class="form-group pl-3">
        <div class="row pb-2">
          <%= f.label "詳細を入力してください:" %>
        </div>
        <%= f.text_field :body, placeholder: "50文字以内で入力してください", :size => "100" %>
        <small id="passwordHelpBlock" class="form-text text-muted pt-1">詳細については５０文字以内で入力してください</small>
      </div>
      <div class="form-group text-center">
        <%= f.submit "投稿する", class: "btn btn-success mt-3" %>
      </div>
      <% end %>
    </div>
  </div>
</div>