<div class="container">
  <div class="row">
    <div class="col-md-3 border rounded mt-5 ml-3">
      <table class="table">
        <tbody>
          <tr>
            <th><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %></th>
          </tr>
          <tr>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
      <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-outline-primary mx-auto mb-3" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-9">
      <div class="col-sm-8 border rounded mx-auto mt-5">
      <div class="container">
        <div class="col-sm-5 mt-3">
          <strong><%= @task.title %></strong>（<%= @task.user.name %>）
        </div>
        <div class="col-sm-10 mt-3">
          ・<%= @task.body %>
        </div>
        <!--セレクトボックスで完了、未完了-->
      </div>
      <div class="d-flex flex-row-reverse">
        <%= link_to "削除", task_path(@task), method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-outline-danger btn-sm mb-2 ml-3" %>
        <% if @task.user == current_user %>
          <%= link_to "編集", edit_task_path(@task), class: "btn btn-outline-primary btn-sm mb-2" %>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>