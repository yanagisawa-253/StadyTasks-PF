<div class="container">
  <div class="row justify-content-center mx-auto mb-5">
    <div class="notification_box mb-5">
      <h3 class="text-center mt-3">通知</h3>
      <%= link_to "通知を全て削除する", notification_path(current_user.id), method: :delete, data:{confirm: "通知を全て消しますか？"}, class: "fas fa-trash" %>
      <hr>
      <% if @notifications.exists? %>
        <%= render @notifications %>
      <% else %>
        <p class="text-center">通知はありません</p>
      <% end %>
      <%= paginate @notifications, class: "paginate" %>
    </div>
  </div>
</div>
