<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class="clearfix border-bottom mt-3 mb-4">
    <%= link_to user_path(notification.visited) do %>
      <%= attachment_image_tag visitor, :user_image, :fill,50,50, format: "jpeg", fallback: "shutterstock_1013274682.png", size: "50x50", class: "rounded-circle" %>
    <% end %>
  <%= notification_form(notification) %>
  <span class="moderate-font"><%= " (#{ time_ago_in_words(notification.created_at) } 前)" %></span>
  <br>
  <% if !@comment.nil? %>
    <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment.comment %></p>
  <% end %>
</div>
