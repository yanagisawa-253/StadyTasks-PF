<div class="container">
  <div class="row">
    <div class="col-sm-10 border mt-5 mb-5 mx-auto">
      <%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>
      <div class="page-header">
        <h2 class="mt-5"><span>お問い合わせ</span></h1>
      </div>

      <% if @inquiry.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <strong>入力内容にエラーがあります</strong>
        <ul>
          <% @inquiry.errors.each do |attr, msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <table class="table">
        <tr>
          <th>名前<span class="text-danger">（必須）</span></th>
          <td><%= f.text_field :name, placeholder: "令和太郎", :size => "30" %></td>
        </tr>
        <tr>
          <th>メールアドレス<span class="text-danger">（必須）</span></th>
          <td><%= f.text_field :email, placeholder: "xx@xxx", :size => "30" %></td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td><%= f.text_area :message, placeholder: "文字を入力してください", :size => "30" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit '確認', class: 'btn btn-outline-primary pl-5 pr-5' %></td>
        </tr>
      </table>

      <% end %>
    </div>
  </div>
</div>
