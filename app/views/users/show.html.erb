<div class="container">
  <div class-"row mt-3">
    <div class="col-sm-10 offset-2 mt-5 pb-5 mx-auto border-bottom">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>
              <!--エラー箇所-->
              <%= attachment_image_tag @user, :user_image, :fill, 200, 200, fallback: "shutterstock_1013274682.png", class: "rounded-circle" %>
            </th>
            <th>
              <table class="table table-borderless mr-3 mt-5">
                <tbody>
                  <tr>
                    <th><%= @user.name %></th>
                  </tr>
                  <tr>
                    <td><%= @user.introduction %></td>
                  </tr>
                </tbody>
              </table>
            </th>
          </tr>
        </tbody>
      </table>
      <div class="col-sm-4 mx-auto">
        <%= link_to "プロフィール編集 ", edit_user_path(@user), class: "btn btn-info btn-block fas fa-user-cog" %>
      </div>
    </div>
    <div class="col-sm-8 mx-auto mt-5 ml-5 mb-5">
      <% @tasks.each do |task| %>
      <div class=" border border-secondary shadow rounded mt-4">
        <div class="col-sm-12 bg-dark"><i class="fas fa-bell text-dark"></i></div>
        <div class="col-sm-5 mt-3">
          <i class="fas fa-clipboard-list"></i>
          <strong><%= task.title %></strong>  <%= attachment_image_tag task.user, :user_image, fallback: "shutterstock_1013274682.png", class: "rounded-circle ml-2", size: "40x40" %>（<%= task.user.name %>）
        </div>
        <div class="col-sm-8 mt-3">
          <i class="fas fa-digital-tachograph"></i> <%= task.body %>
        </div>

        <div class="col-sm-3 mt-3 text-success">
          <%= task.status %>
          <i class="fas fa-wrench"></i>
        </div>
        <div class="d-flex flex-row-reverse">
          <%= link_to "チェックする", task_path(task), class: "fas fa-clipboard-check btn btn-sm text-info mb-2 ml-3" %>
          <% if current_user %>
            <%= link_to "編集", edit_task_path(task), class: "fas fa-wrench btn btn-sm text-secondary mb-2 ml-3" %>
          <% end %>
          <p class="mb-2 ml-2"><i class="fas fa-comments text-secondary"></i> <%= task.comments.count %></p>
          <p class="mb-2 ml-2 mr-3"><i class="fas fa-heart text-danger"></i> <%= task.likes.count %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
