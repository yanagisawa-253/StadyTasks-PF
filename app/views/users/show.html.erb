<div class="container">
  <div class-"row">
    <div class="col-mb-3">
      <div class="table">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th><%= attachment_image_tag @user, :profile_image, fallback: "icon_110950_256.png" %></th>
            </tr>
            <tr>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th><%= @user.introduction %></th>
            </tr>
            <tr>
              <th><%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-success rounded-circle" %></th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-sm-7 border rounded mx-auto mt-5">
      <% @tasks.each do |task| %>
      <div class="container">
        <div class="col-sm-5 mt-3">
          <strong><%= task.title %></strong>（<%= task.user.name %>）
        </div>
        <div class="col-sm-10 mt-3">
          ・<%= task.body %>
        </div>
        <!--セレクトボックスで完了、未完了-->
      </div>
      <div class="d-flex flex-row-reverse">
      <%= link_to "編集", edit_task_path(task), class: "btn btn-outline-primary btn-sm mb-2" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
