<div class="container">
  <div class-"row">
    <div class="col-sm-10 offset-2 mt-4 pb-5 mx-auto border-bottom">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class: "rounded-circle" %>
            </th>
            <th>
              <table class="table table-borderless mt-5">
                <tbody>
                  <tr>
                    <th><%= @user.name %></th>
                  </tr>
                  <tr>
                    <td><%= @user.introduction %></td>
                    <td><%= link_to " ", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></td>
                  </tr>
                </tbody>
              </table>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm-8 mx-auto mt-4">
      <% @tasks.each do |task| %>
      <div class="container border rounded">
        <div class="col-sm-5 mt-3">
          <strong><%= task.title %></strong>（<%= task.user.name %>）
        </div>
        <div class="col-sm-8 mt-3">
          ・<%= task.body %>
        </div>
        <div class="col-sm-3 mt-3 text-success">
          <%= task.status %>
          <i class="fas fa-wrench"></i>
        </div>
        <div class="d-flex flex-row-reverse">
          <%= link_to "", task_path(task), class: "fas fa-clipboard-check btn btn-sm text-primary mb-2 ml-3" %>
          <% if current_user %>
            <%= link_to "", edit_task_path(task), class: "fas fa-edit btn btn-sm text-primary mb-2 ml-3" %>
          <% end %>
          <p class="mb-2 ml-2"></p>コメント <%= task.comments.count %></p>
          <p class="mb-2 ml-2 mr-3"> ♡ <%= task.likes.count %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
