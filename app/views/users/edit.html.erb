<div class="container">
  <div class-"row">
    <div class="col-lg-12 text-center mt-5">
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>

      </div>
      <div class="form-group">
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      </div>
      <div class="form-group">
        <%= f.text_field :introduction, id:"inputIntroduction", placeholder:"自己紹介" %>
      </div>
        <%= f.submit "変更を保存", class: "btn btn-secondary mx-auto" %>
      <% end %>
      <p class="text-secondary mt-5">Profire.edit</p>
    </div>
  </div>
</div>