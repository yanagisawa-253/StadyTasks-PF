<!DOCTYPE html>
<html>
  <head>
    <title>StudyTasks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/73a3b6086e.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><i class="fas fa-pencil-alt"></i><strong>StudyTasks</strong></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item ">
              <%= link_to 'MYページ', user_path(current_user.id), class: 'fas fa-home nav-link text-ligth' %>
            </li>
            <li class="nav-item">
              <% if unchecked_notifications.any? %>
                <%= link_to '通知があります', notifications_path, class: 'far fa-bell nav-link text-ligth' %>
              <% else %>
                <%= link_to '通知', notifications_path, class: 'far fa-bell nav-link text-ligth' %>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to '投稿', new_task_path, class: 'far fa-edit nav-link text-ligth' %>
            </li>
            <li class="nav-item">
              <%= link_to '一覧', tasks_path, class: 'fas fa-clipboard-list nav-link text-ligth' %>
            </li>
            <li class="nav-item">
              <%= link_to "", destroy_user_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-ligth' %>
            </li>

          <% else %>
          <!--ログイン前のナビバー-->
            <li class="nav-item">
              <%= link_to '覗いてみる', tasks_path, class: 'fas fa-clipboard-list nav-link text-ligth' %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path, class: 'fas fa-user-plus nav-link text-ligth' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-ligth' %>
            </li>
          <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>


    <%= yield %>

    <footer class="footer bg-dark fixed-bottom">
      <div class="container">
        <div class="row">
          <div class="col-lg-4 text-white">
            © 2021 StudyTasks　url:
            <%= link_to 'GitHub', 'https://github.com/yanagisawa-253/StadyTasks-PF', class: 'fab fa-github' %>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
